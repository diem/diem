module Tester {
    struct T{v: u64}

    public new(v: u64): Self.T  {
        return T{v: move(v)};
    }

    public replace(t: &mut Self.T) {
        let t2: &mut Self.T;
        let t_v: &mut u64;
        let new_t: Self.T;
        t2 = copy(t);
        t_v = &mut copy(t2).v;
        *move(t_v) = 10000;

        new_t = Self.new(1);
        *move(t2) = move(new_t);
        _ = move(t);
        return;
    }

    public value(this: &mut Self.T): u64 {
        let ref_v: &u64;
        let r: u64;
        ref_v = &copy(this).v;
        r = *move(ref_v);
        _ = move(this);
        return move(r);
    }

}

//! new-transaction

import {{default}}.Tester;

main() {
    let t: Tester.T;
    let old_ref: &mut Tester.T;
    let ref_t: &mut Tester.T;
    let v_from_ref: u64;
    let tt: &mut Tester.T;
    let v_from_t: u64;
    let no: u64;
    t = Tester.new(0);
    old_ref = &mut t;
    ref_t = &mut t;
    Tester.replace(copy(ref_t));
    v_from_ref = Tester.value(move(ref_t));
    tt = &mut t;
    v_from_t = Tester.value(move(tt));
    assert(copy(v_from_ref) == 1, 42);
    assert(copy(v_from_t) == 1, 42);
    no = Tester.value(move(old_ref));
    return;
}

