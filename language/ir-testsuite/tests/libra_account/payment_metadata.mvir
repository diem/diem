//! new-transaction
//! sender: alice
import 0x0.LibraAccount;
import 0x0.LBR;
import 0x0.Libra;
// same thing, but using "deposit_with_metadata" API
main() {
    LibraAccount.deposit_with_metadata<LBR.T>(
        {{bob}},
        LibraAccount.withdraw_from_sender<LBR.T>(100),
        h"deadbeef"
    );
    return;
}

