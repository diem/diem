import 0x1.LibraAccount;
import 0x1.LBR;
import 0x1.LCS;
import 0x1.Roles;

//! sender: association
main(account: &signer) {
    let addr: address;
    let x: Roles.Capability<Roles.LibraRootRole>;
    let pubkey: vector<u8>;
    x = Roles.extract_privilege_to_capability<Roles.LibraRootRole>(copy(account));
    pubkey = h"7013b6ed7dde3cfb1251db1b04ae9cd7853470284085693590a75def645a926d";

    addr = 0x111101;
    assert(!LibraAccount.exists_at(copy(addr)), 83);
    LibraAccount.create_parent_vasp_account<LBR.LBR>(copy(account), &x, copy(addr), LCS.to_bytes<address>(&addr), h"aa", h"bb", move(pubkey), false);
    Roles.restore_capability_to_privilege<Roles.LibraRootRole>(move(account), move(x));
    return;
}

//! new-transaction
import 0x1.LibraAccount;
import 0x1.LBR;
import 0x1.LCS;
import 0x1.Libra;

main(account: &signer) {
    let addr: address;
    let ten_coins: Libra.Libra<LBR.LBR>;
    let account_exists_now: bool;
    let account2_balance: u64;
    let account2_sequence_number: u64;
    let with_cap: LibraAccount.WithdrawCapability;

    addr = 0x111101;

    with_cap = LibraAccount.extract_withdraw_capability(copy(account));
    ten_coins = LibraAccount.withdraw_from<LBR.LBR>(&with_cap, 10);
    LibraAccount.restore_withdraw_capability(move(with_cap));
    LibraAccount.deposit<LBR.LBR>(copy(account), copy(addr), move(ten_coins));

    account_exists_now = LibraAccount.exists_at(copy(addr));
    assert(move(account_exists_now), 84);
    account2_balance = LibraAccount.balance<LBR.LBR>(copy(addr));
    assert(move(account2_balance) == 10, 84);
    account2_sequence_number = LibraAccount.sequence_number(move(addr));
    assert(move(account2_sequence_number) == 0, 84);

    return;
}
