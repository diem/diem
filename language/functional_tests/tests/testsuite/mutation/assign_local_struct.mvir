module Tester {
    struct T{v: u64}

    public new(v: u64): V#Self.T  {
        return T{v: move(v)};
    }

    public replace(t: &mut V#Self.T) {
        let t2: &mut V#Self.T;
        let t_v: &mut u64;
        let new_t: V#Self.T;
        t2 = copy(t);
        t_v = &mut copy(t2).v;
        *move(t_v) = 10000;

        new_t = Self.new(1);
        *move(t2) = move(new_t);
        release(move(t));
        return;
    }

    public value(this: &mut V#Self.T): u64 {
        let ref_v: &u64;
        ref_v = &move(this).v;
        return *move(ref_v);
    }

}

