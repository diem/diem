// check: VerificationFailure
// check: MOVELOC_UNAVAILABLE_ERROR

module Token {
    resource T{value: u64}
    public new(m: u64): Self.T {
        return T{value: copy(m)};
    }
    public destroy(t: Self.T) {
        let value: u64;
        T {value} = move(t);
        return;
    }

    public bump_value(this: &Self.T) {
        let val: &u64;
        let x: u64;
        val = &move(this).value;
        x = *move(val) + 1;
        *move(val) = copy(x);
        return;
    }
}

//! new-transaction

import {{default}}.Token;

main() {
    let t: Token.T;
    let tr: &Token.T;
    t = Token.new(42);
    tr = &t;
    Token.bump_value(move(tr));
    Token.destroy(move(t));
    return;
}
