module Test {
    resource T { i: u64 }

    public test() acquires T {
        let t: Self.T;
        let t_ref: &mut Self.T;
        let t_ref_copy: &mut Self.T;
        let sender: address;

        t = T { i: 0 };
        move_to_sender<T>(move(t));

        sender = get_txn_sender();
        t_ref = borrow_global_mut<T>(copy(sender));
        t_ref_copy = copy(t_ref);
        _ = move(t_ref);

        t_ref = borrow_global_mut<T>(copy(sender));
        _ = move(t_ref);
        _ = move(t_ref_copy);

        return;
    }
}

