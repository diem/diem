//! account: bob
//! account: alice

module Test{
    import 0x0.ChannelAccount;

    public assert_channel_txn(){
        let receiver: address;
        assert(is_channel_txn() == true, 42);
        receiver = get_txn_receiver();
        assert(copy(receiver) == {{bob}}, 42);
        return;
    }
}

//! new-transaction
//! sender: alice
main() {
    let x: bool;
    x = is_channel_txn();

    assert(copy(x) == false, 77);
    return;
}

//! new-transaction
//! sender: alice
//! receiver: bob

0x0.ChannelAccount.open 100000 50000

//! new-transaction
//! sender: alice
//! receiver: bob

{{default}}.Test.assert_channel_txn
