module M {
    struct S { g: u64 }

    t1(root: &mut Self.S, cond: bool) {
        let x1: u64;
        let x2: u64;
        let eps: &u64;
        let g_mut: &mut u64;
        let g_imm: & u64;
        x1 = 0;
        x2 = 1;
        if (move(cond)) {
            eps = Self.bar(copy(root));
        } else {
            eps = &x1;
        }
        // Error: root has weak empty borrow and hence a field cannot be borrowed mutably
        g_mut = &mut move(root).g;
        g_imm = freeze(move(g_mut));
        return;
    }

    bar(a: &mut Self.S): &u64 {
        return &move(a).g;
    }
}

